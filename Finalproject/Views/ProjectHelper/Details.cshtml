<table class="table">
   <h3>Current Tasks:</h3> 
   <a asp-action="createTask" asp-route-projectId = "@Model.Id">Create New Task</a>
    <thead>
        <tr>
            <td>Name</td>
            <td>PercentageCompleted</td>
            <td>IsCompleted</td>
            <td>Priority</td>
            <td>StartDate</td>
            <td>EndDate</td>
            <td>DeadLine</td>
            <td>Developer</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in ViewBag.tasks )
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PercentageCompleted</td>
                <td>@item.IsCompleted</td>
                <td>@item.Priority</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.DeadLine</td>
                <td>@item.UserCreator.UserName</td>
            </tr>
        }
    </tbody>
</table>

