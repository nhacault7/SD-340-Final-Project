@model IEnumerable<Finalproject.Models.ProjectTask>

@{
    ViewData["Title"] = "OverdueTasks";
}

<h1>Overdue Tasks from all of your Projects</h1>


<table class="table">
    <thead>
         <tr>
            <th >
                Project
            </th>
            <th >
                Task
            </th>
            <th >
                Progress %
            </th>
            <th >
                Status
            </th>
         
            <th >
                Priority
            </th>
            <th >
               Start&nbsp;&nbsp;Date&nbsp;
            </th>
            <th >
                End&nbsp;&nbsp;Date&nbsp;
            </th>
            <th >
                Deadline
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <progress style="width:70px;" max="100" value="@item.PercentageCompleted"></progress>
                <span id="show" style="font-size:12px;">@item.PercentageCompleted&nbsp;</span> &nbsp;
            </td>
            <td>
                @if(item.IsCompleted==true){<p>Completed</p>}
                @if(item.IsCompleted==false){<p>Pending</p>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                  @item.StartDate.Value.ToString("yy/MM/dd")
            </td>
            <td>
                  @if(item.EndDate != null){@item.EndDate.Value.ToString("yy/MM/dd")}
            </td>
            <td>
                @item.DeadLine.Value.ToString("yy/MM/dd")
            </td>

        </tr>
}
    </tbody>
</table>
